{% extends 'base.html.twig' %}


{% block body %}
<div data-controller="main" class="container d-grid gap-3">
    <div class="row">
        <h2>{{ 'app-main-form-title'|trans }}</h2>
    </div>
    <div class="row-cols-2">
        <div class="col">
            <form name="search_label" action="{{ path('app_therapy_labels_search_redirector') }}" method="post">
                <div class="input-group mb-3">
                    <input type="search" name="label_name" required="required" class="form-control form-control" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">{{ 'app-search-for-label-button'|trans }}</button>
                </div>
            </form>

            <form name="search_stub" action="{{ path('app_therapy_stubs_search_redirector') }}" method="post">
                <div class="input-group mb-3">
                    <input type="search" required="required" name="searchName_stub" class="form-control form-control" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">{{ 'app-search-for-therapy-button'|trans }}</button>
                </div>
            </form>

            <form name="searchName_scheme" action="{{ path('app_therapy_saved_templates') }}" method="post">
                <div class="input-group mb-3">
                    <input type="search" required="required" name="searchName_scheme" class="form-control form-control" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
                        {{ 'app-search-for-scheme-button'|trans }}
                    </button>
                </div>
            </form>

        </div>
    </div>
    <div class="row">
        <div class="d-grid gap-2 d-md-block">
            <a href="{{ path('app_therapy_stub_new', {'_locale': app.request.locale}) }}" class="btn btn-outline-primary" role="button">{{ 'app-new-therapy-stub-button'|trans }}</a>
            <a href="{{ path('app_therapy_scheme_create', {'_locale': app.request.locale}) }}" class="btn btn-outline-primary" role="button">{{ 'app-new-therapy-scheme-button'|trans }}</a>
        </div>
    </div>
</div>
{% endblock %}
