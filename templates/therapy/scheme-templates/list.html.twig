{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
    <div class="row mt-3">
        <h2>{{ 'app-new-therapy-scheme-templates'|trans }}</h2>
    </div>
    <div class="row mt-3">
        <div class="list-group">
            {% for template in templates %}
            <div class="list-group-item d-flex justify-content-between align-items-start">
                <div class="fw-bold">
                    <a href="#">{{ template.name }}</a>
                </div>
                <div class="bg-danger p-1 rounded">
                    <a href="{{ path('app_therapy_scheme_template_delete', { id: template.id }) }}" class="text-dark">{{ 'app-delete-button'|trans }}</a>
                </div>
            </div>
            {% endfor %}
            <div class="mt-3">
                {{ knp_pagination_render(templates) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}