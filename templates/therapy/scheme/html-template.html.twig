<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'app-project-title'|trans }}{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="row mb-3">
                <h2></h2>
                <ol>
                {% for label in data %}
                    {% if label.id in targets|keys %}
                    <li>
                        <h5>{{ label.reportName }}</h5>
                        <ul>
                        {% for stub in label.stubs %}
                            {% if stub.id in targets[label.id]|keys %}
                            <li>
                                <p class="text-black">
                                    {{ stub.description }}{% if not (stub.description ends with '.') %}.{% endif %} {{ comments[stub.id] }}{% if not (comments[stub.id] ends with '.') and (comments[stub.id]|length > 0) %}.{% endif %}
                                </p>
                            </li>
                            {% endif %}
                        {% endfor %}
                        </ul>
                    </li>
                    {% endif %}
                {% endfor %}
                </ol>
            </div>
        </div>
    </body>
</html>
