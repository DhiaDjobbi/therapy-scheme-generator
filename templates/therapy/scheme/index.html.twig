{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
    <div class="row">
        <h2>{{ 'therapy_new_form_title'|trans }}</h2>
    </div>
    <form action="{{ path('app_therapy_scheme_new') }}" method="POST">
        <div class="row mb-3">
            <div class="col">
                <select 
                    class="select2 form-select" name="labels[]" multiple="multiple" 
                    placeholder="{{ 'therapy_table_label_list'|trans }}" 
                    aria-label="{{ 'therapy_table_label_list'|trans }}" 
                    aria-describedby="button-addon2"
                >
                {% for label in all %}
                    <option value="{{ label.id }}"{% if label.id in selected %} selected{% endif %}>{{ label.shortName }}</option>
                {% endfor %}
                </select>
            </div>
            <div class="col-2">
                <button class="btn btn-outline-secondary" type="submit">{{ 'therapy_table_load_labels'|trans }}</button>
            </div>
        </div>
    </form>
    <form action="{{ path('app_therapy_scheme_generate_pdf') }}" name="report_form" method="POST">
        <div class="row mb-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">{{ 'therapy_table_title'|trans }}</th>
                        <th scope="col">{{ 'therapy_table_name'|trans }}</th>
                        <th scope="col">{{ 'therapy_table_description'|trans }}</th>
                        <th scope="col">{{ 'therapy_table_background'|trans }}</th>
                        <th scope="col">{{ 'therapy_table_comment'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for label in data %}
                    <tr class="table-light">
                        <th scope="row" colspan="5">{{ label.shortName }}</th>
                    </tr>
                    {% for stub in label.stubs %}
                        <tr>
                            <td class="text-end col-2">
                                <input type="checkbox" name="targets[{{ label.id }}][{{ stub.id }}]" class="form-check-input" checked>
                            </td>
                            <td class="col-1 border-start">{{ stub.name }}</td>
                            <td class="col-3 border-start">{{ stub.description }}</td>
                            <td class="col-3 border-start">{{ stub.background }}</td>
                            <td class="border-start">
                                <input name="comments[{{ stub.id }}]" type="text" class="form-control">
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row mb-3">
            <div class="col"></div>
            <div class="col-3">
                <button class="btn btn-primary flex-fill w-100" type="submit">Generate Report</button>
            </div>
            <div class="col"></div>
        </div>
    </form>
</div>
{% endblock %}
